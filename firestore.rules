rules_version = '2';
// Approval-based access: users read own doc; only admins read/update others.
// Bootstrap: replace REPLACE_WITH_YOUR_ADMIN_EMAIL with your email to self-elevate to admin once. See ADMIN_SETUP.md.
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.role == resource.data.role && request.resource.data.status == resource.data.status)
        || (request.auth.uid == userId && request.auth.token.email != null && request.auth.token.email == 'REPLACE_WITH_YOUR_ADMIN_EMAIL' && request.resource.data.role == 'admin' && request.resource.data.status == 'approved')
        || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && request.auth.uid != userId)
      );
      allow delete: if false;
    }
  }
}
